<ul class="nav mb-3 d-flex justify-content-center text-center" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="active btn btn-sm btn-outline-light mx-2" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#methodA" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Books</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="btn btn-sm btn-outline-light mx-2" data-bs-toggle="pill" data-bs-target="#methodB" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Authors</button>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="methodA" role="tabpanel" aria-labelledby="pills-home-tab">
    <% if @books.length > 0 %>
      <table class="table text-light table-active">
        <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">SK Title</th>
          <th scope="col">Author</th>
          <th scope="col">Reviews</th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr class="text-light">
            <td><%= link_to "#{book.title}", book, class:"text-light text-decoration-none" %></td>
            <td><%= link_to "#{book.title_sk}", book, class:"text-light text-decoration-none"  %></td>
            <td><%= link_to "#{book.author.full_name}", book.author, class:"text-light text-decoration-none"  %></td>
            <td>
              -
            </td>

          </tr>
        <% end %>

        </tbody>
      </table>
    <% end %>

    <%= page_entries_info @books %>
    <%= paginate @books, theme: 'bootstrap-5', pagination_class: "my-3 pagination-sm flex-wrap justify-content-center" %>
  </div>

  <div class="tab-pane fade" id="methodB" role="tabpanel" aria-labelledby="pills-home-tab">

    <% if @authors.length > 0 %>
      <table class="table text-light table-active">
        <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Country</th>
          <th scope="col">Books</th>
        </tr>
        </thead>
        <tbody>
        <% @authors.each do |author| %>
          <tr class="text-light">
            <td><%= link_to "#{author.full_name}", author, class:"text-light text-decoration-none" %></td>
            <td><%= author.country %></td>
            <td><%= author.books.length %></td>
          </tr>
        <% end %>

        </tbody>
      </table>
    <% end %>

    <%= page_entries_info @authors %>
    <%= paginate @authors, theme: 'bootstrap-5', pagination_class: "my-3 pagination-sm flex-wrap justify-content-center" %>
  </div>
</div>