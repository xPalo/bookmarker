<%- if controller_name != 'sessions' %>
  <%= link_to t(:'devise.login_btn'), new_session_path(resource_name), class:"text-light"  %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t(:'devise.signup_btn'), new_registration_path(resource_name), class:"text-light" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(:'devise.forgot_password'), new_password_path(resource_name), class:"text-light"  %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(:'devise.didnt_receive_confirmation'), new_confirmation_path(resource_name), class:"text-light"  %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(:'devise.didnt_receive_unlock'), new_unlock_path(resource_name), class:"text-light"  %><br />
<% end %>