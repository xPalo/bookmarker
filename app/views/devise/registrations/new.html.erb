<h1 class="text-center"> <%= t(:'devise.signup') %> </h1>

<div class="form-signin my-4 mx-auto w-75">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="d-flex">
      <div class="form-group mb-3 me-2 w-50">
        <%= f.label t(:'devise.first_name') %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class:"form-control"%>
      </div>

      <div class="form-group mb-3 ms-2 w-50">
        <%= f.label t(:'devise.last_name') %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class:"form-control" %>
      </div>
    </div>

    <div class="form-group mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.bio') %> <br />
      <%= f.text_area :bio, autofocus: true, class:"form-control" %>
    </div>

    <hr>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.password') %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="my-3">
      <%= t(:'devise.already_have_account') %>
      <%= render "devise/shared/links" %>
    </div>

    <div class="actions">
      <%= f.submit t(:'devise.signup_btn'), class:"btn btn-lg btn-light my-auto" %>
    </div>
  <% end %>

  <div class="row my-2">
    <div class="col-md-12">
      <a class="btn btn-google btn-block text-uppercase btn-outline" href="<%= user_google_oauth2_omniauth_authorize_path %>"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> <%= t(:'devise.signup_google_btn') %> </a>
    </div>
  </div>
</div>