<div class="p-5 mb-4 text-light rounded-3 text-start">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold"><%= user.full_name %></h1>
    <p class="card-text">
      <strong><%= user.email %></strong>
    </p>

    <% if user.bio %>
      <p class="card-text">
        <%= user.bio %>
      </p>
    <% end %>

    <p class="card-text">
    <% if user.reviews.length > 0 %>
      <table class="table table-hover text-light table-active">
        <thead>
        <tr>
          <th scope="col">Reviews</th>
        </tr>
        </thead>
        <tbody>
        <% user.reviews.each do |review| %>
          <tr class="text-light m-0">
            <td><%= render review %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
    <%= link_to "Back", users_path, class:"btn btn-outline-light" %>

    <% if user == current_user %>
      <%= link_to "Edit profile", edit_user_registration_path, class:"btn btn-outline-warning" %>
    <% end %>

    </p>
<!--    <div class="d-flex justify-content-start">-->
      <%#= link_to "Edit", edit_author_path(@author), class:"btn btn-dark btn-lg me-3 text-white" %>
      <%#= link_to "Add Book", new_book_path(:new_book_author_id => "#{@author.id}"), class:"btn btn-success btn-lg me-3" %>
      <%#= link_to "Back", authors_path, class:"btn btn-primary btn-lg me-3" %>
      <%#= button_to "Delete", @author, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class:"btn btn-danger btn-lg me-3" %>
<!--    </div>-->
  </div>
</div>