<div class="p-5 mb-4 text-light rounded-3 text-start">
  <div class="container-fluid py-5">

    <%#= render partial: "users/user_card", locals: {user: user}  %>

    <p class="card-text">
    <% if user.reviews.length > 0 %>
      <table class="table table-hover text-light table-active">
        <thead>
        <tr>
          <th scope="col"> <%= t(:reviews) %> </th>
        </tr>
        </thead>
        <tbody>
        <% user.reviews.each do |review| %>
          <tr class="text-light m-0">
            <td><%= render review %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
    <%= link_to t(:back), users_path, class:"btn btn-outline-light" %>

    <% if user == current_user %>
      <%= link_to t(:'header.edit_profile'), edit_user_registration_path, class:"btn btn-outline-warning" %>
    <% end %>

    </p>
  </div>
</div>