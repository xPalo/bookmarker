<div class="form-signin my-4 mx-auto w-75">
<%= form_with(model: review) do |form| %>

    <% if review.errors.any? %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>
          <% review.errors.each do |error| %>
            <%= error.full_message %>
            <br>
          <% end %>
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

      <div class="form-group mb-3">
        <%= form.hidden_field :user_id, value: current_user.id, class:"form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :book_id %>
        <%= form.select :book_id, (@books.map{|a| ["#{a.title} (#{a.author.full_name})", a.id]}), {}, {class: "form-select", id: "book_id_select" } %>
      </div>

      <div class="form-group mb-3 text-black">
        <div class=" d-flex justify-content-center text-light">
          <%= form.label :score, class:"text-light", id:"range_v" %>
        </div>
        <%= form.range_field :score, in: 0..10, value: 5, class:"form-range", id:"range_field" %>
      </div>

      <div class="form-group mb-3 text-black">
      <%= form.label "My thoughts", class:"text-light" %>
      <%= form.text_area :body, class:"form-control" %>
      </div>

      <div>
        <%= form.submit class:"btn btn-lg btn-dark mt-2"%>
      </div>
    <% end %>
  <%# end %>
</div>

<script type="text/javascript" charset="utf-8">
      const value_element = document.getElementById("range_v")
      const range_field = document.getElementById("range_field")
      value_element.innerHTML = "Score = " + range_field.value;

      range_field.addEventListener("input", () => {
            value_element.innerHTML = "Score = " + range_field.value;
      })

</script>