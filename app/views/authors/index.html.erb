<h1 class="text-center"><%= t(:authors) %></h1>

<div id="authors" class="text-center mx-auto w-100">
  <% if @authors.length > 0 %>

    <table class="table table-hover text-light table-active">
          <thead>
              <tr>
                <th scope="col"><%= t(:'devise.first_name') %></th>
                <th scope="col"><%= t(:'devise.last_name') %></th>
                <th scope="col"><%= t(:country) %></th>
                <th scope="col"><%= t(:action) %></th>
              </tr>
          </thead>
          <tbody>
            <% @authors.each do |author| %>
                <tr class="text-light">
                  <td><%= author.first_name %></td>
                  <td><%= author.last_name %></td>
                  <td><%= author.country %></td>
                  <td><%= link_to t(:show), author, class:"text-info" %></td>
                </tr>
            <% end %>
          </tbody>
    </table>
  <% end %>

    <%= page_entries_info @authors %>
    <%= paginate @authors, theme: 'bootstrap-5', pagination_class: "my-3 pagination-sm flex-wrap justify-content-center" %>
  <div class="d-flex justify-content-start">
    <%= link_to t(:'header.new_author'), new_author_path, class:"btn btn-light text-success" %>
  </div>
</div>