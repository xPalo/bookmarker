<div class="form-signin my-4 mx-auto w-75">
  <%= form_with(model: author) do |form| %>

    <% if author.errors.any? %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <strong>
            <% author.errors.each do |error| %>
              <%= error.full_message %>
              <br>
            <% end %>
          </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>

    <div class="form-group mb-3">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class:"form-control"%>
    </div>

    <div class="form-group mb-3">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :country %>
      <%= form.text_field :country, class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.number_field :user_id, id: :author_user_id, type: :hidden, class:"form-control", value: current_user.id %>
    </div>

    <%= form.submit class:"btn btn-lg btn-light my-auto"%>
  <% end %>
</div>