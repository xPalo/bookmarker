<h1 class="text-center">Books</h1>

<div id="books" class="text-center mx-auto w-100">
  <% if @books.length > 0 %>
    <table class="table text-light table-active">
      <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">SK Title</th>
        <th scope="col">Author</th>
        <th scope="col">Reviews</th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr class="text-light">
          <td><%= link_to "#{book.title}", book, class:"text-light text-decoration-none" %></td>
          <td><%= link_to "#{book.title_sk}", book, class:"text-light text-decoration-none"  %></td>
          <td><%= link_to "#{book.author.full_name}", book.author, class:"text-light text-decoration-none"  %></td>
          <td><%= render partial: "shared/star_rating", locals: {rating: book.rating}  %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  <% end %>

  <%= page_entries_info @books %>
  <%= paginate @books, theme: 'bootstrap-5', pagination_class: "my-3 pagination-sm flex-wrap justify-content-center" %>
  <div class="d-flex justify-content-start">
    <%= link_to "New book", new_book_path, class:"btn btn-light text-success" %>
  </div>
</div>