<div>
  <%= link_to 'Bookmarker', root_path, class:"navbar-brand fs-2 my-auto fw-bold float-md-start text-white" %>
  <nav class="nav nav-masthead justify-content-center float-md-end">
    <% if user_signed_in? %>
      <%#= link_to 'Explore', users_path, class:"nav-link fw-bold py-1 px-2 #{current_class?(users_path)}" %>
      <%= link_to 'Profile', edit_user_registration_path, class:"nav-link fw-bold py-1 px-2 text-warning #{current_class?(edit_user_registration_path, "warning")}" %>
      <%#= link_to 'Profile', user_path(id: current_user.id), class:"nav-link fw-bold py-1 px-2 text-warning #{current_class?(user_path(id: current_user.id), "warning")}" %>
      <%= button_to 'Log out', destroy_user_session_path, method: :delete, class:"btn btn-link nav-link fw-bold py-1 px-2 text-danger danger" %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path, class:"nav-link fw-bold py-1 px-2 #{current_class?(new_user_registration_path, "light")}" %>
      <%= link_to 'Log in', new_user_session_path, class:"nav-link fw-bold py-1 px-2 text-info #{current_class?(new_user_session_path, "info")}" %>
    <% end %>
  </nav>
</div>